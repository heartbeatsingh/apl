<div class="row">
        
    <!-- NEW COL START -->
    <article class="col-sm-12 col-md-12 col-lg-8">
				
        <!-- Widget ID (each widget will need unique ID)-->
        <div class="jarviswidget" id="wid-id-3" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
            <!-- widget options:
            usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

            data-widget-colorbutton="false"
            data-widget-editbutton="false"
            data-widget-togglebutton="false"
            data-widget-deletebutton="false"
            data-widget-fullscreenbutton="false"
            data-widget-custombutton="false"
            data-widget-collapsed="true"
            data-widget-sortable="false"

            -->
            <header>
                <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                <h2>Players </h2>

            </header>

            <!-- widget div-->
            <div>

                <!-- widget edit box -->
                <div class="jarviswidget-editbox">
                    <!-- This area used as dropdown edit box -->

                </div>
                <!-- end widget edit box -->

                <!-- widget content -->
                <div class="widget-body no-padding">
                        <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>			                
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Email</th>                                       
                                        <th>Basic Value</th>
                                        <th>Auction Value</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% results.forEach(function(row){ %>
                                        <tr>
                                            <td>
                                            <% if(row.picture){ %>
                                                <img src="/players/<%= row.picture %>" alt="<%= row.name %>" title="<%= row.name %>" class="" width="80">
                                            <% }else{ %>
                                                <img src="/img/avatars/male.png" alt="<%= row.name %>" title="<%= row.name %>" class="" width="80">
                                            <% } %>
                                            </td>
                                            <td><%= row.name %></td>
                                            <td><%= row.email %></td>                                            
                                            <td><%= row.basic_player_value %></td>
                                            <td><%= row.auction_player_value %></td>
                                            <td>
                                                <% if(row.status){ %>
                                                    <a href="javascript:void(0);" class="btn btn-default btn-circle" title="Activate"><i class="glyphicon glyphicon-ok"></i></a>
                                                <% }else{ %>
                                                    <a href="javascript:void(0);" class="btn btn-default btn-circle" title="InActivate"><i class="glyphicon glyphicon-remove"></i></a>
                                                <% } %>
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <button class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown">
                                                        Actions <span class="caret"></span>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li>
                                                            <a href="/admin/players/<%= row.id %>">Edit Info</a>
                                                        </li>
                                                        <li>
                                                            <a href="javascript:void(0);">Send Tokens</a>
                                                        </li>                                                               
                                                        <li class="divider "></li>
                                                        <li>
                                                            <a href="javascript:void(0);" class="txt-color-red">Delete</a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>     
                                    <%});%>                              
                                </tbody>
                            </table>
                    

                </div>
                <!-- end widget content -->

            </div>
            <!-- end widget div -->

        </div>
        <!-- end widget -->

    </article>
    <!-- END COL -->

    <!-- NEW COL START -->
    <article class="col-sm-12 col-md-12 col-lg-4">

        <!-- Widget ID (each widget will need unique ID)-->
        <div class="jarviswidget" id="wid-id-4" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
            <!-- widget options:
            usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

            data-widget-colorbutton="false"
            data-widget-editbutton="false"
            data-widget-togglebutton="false"
            data-widget-deletebutton="false"
            data-widget-fullscreenbutton="false"
            data-widget-custombutton="false"
            data-widget-collapsed="true"
            data-widget-sortable="false"

            -->
            <header>
                <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                <h2>Enter Player </h2>

            </header>

            <!-- widget div-->
            <div>

                <!-- widget edit box -->
                <div class="jarviswidget-editbox">
                    <!-- This area used as dropdown edit box -->

                </div>
                <!-- end widget edit box -->

                <!-- widget content -->
                <div class="widget-body no-padding">

                    <form class="smart-form" action="/admin/players/<%= (row) ? row.id : '' %>" method="POST" enctype="multipart/form-data">   
                        <% if(row){ %>
                            <input type="hidden" name="_method" value="PUT">
                        <% } %>                    
                        <fieldset>                       
                            <section>
                                <label class="label">Name<span class="txt-color-red">*</span></label>
                                <label class="input">
                                    <input type="text" maxlength="50" name="name" value="<%= row ? row.name : '' %>">
                                </label>
                                <div class="note">
                                    Name of the player.
                                </div>
                            </section>
                            
                            <section>
                                <label class="label">Email<span class="txt-color-red">*</span></label>
                                <label class="input">
                                    <input type="text" maxlength="50" name="email" value="<%= row ? row.email : '' %>">
                                </label>
                                
                            </section>
                            <% if(!row){ %>
                            <section>
                                    <label class="label">Ac/No<span class="txt-color-red">*</span></label>
                                    <label class="input">
                                        <input type="text" maxlength="60" id="ethAc" name="ac_no" value="<%= row ? row.ac_no : '' %>">
                                        <input type="hidden" maxlength="60" id="ethAcPk" name="ac_pk" value="<%= row ? row.ac_pk : '' %>">
                                    </label>
                                    <div class="note" id="ethAcNote">
                                        ETH account address, where tokens will send.<br>
                                        Don't have account? <a href="javascript:void(0)" id="generateNewAc">Create new ETH account</a>
                                    </div>
                            </section>
                            <section>
                                <label class="label">Basic Player Value<span class="txt-color-red">*</span></label>
                                <label class="input">
                                    <input type="text" maxlength="60" name="basic_player_value" value="<%= row ? row.basic_player_value : '' %>">
                                </label>
                                <div class="note">
                                    The basic tokens amount of the player according to APL board.
                                </div>
                            </section>
                            <% } %>
                            
                            <section>
                                <label class="label">Brief About Player</label>
                                <label class="textarea"> 										
                                    <textarea rows="3" class="custom-scroll" name="brief_desc"><%= row ? row.brief_desc : '' %></textarea> 
                                </label>
                                <div class="note">
                                    How many matches, how many sixers, how many boundries, total runs in APL, total wickets in APL etc.  
                                </div>
                            </section>
                                
                            <section>
                                <label class="label">Picture</label>
                                <div class="input input-file">
                                    <span class="button"><input type="file" id="file" name="playerPic" onchange="this.parentNode.nextSibling.value = this.value">Browse</span><input type="text" readonly="">
                                </div>
                                <div class="note">
                                    Player's picture.
                                </div>
                            </section>

                            <div class="row">
                                <section class="col col-5">
                                    <label class="toggle">
                                        <input type="checkbox" name="status" <%= row ? (row.status) ? "checked='checked'" : ""  : "checked='checked'" %>>
                                        <i data-swchon-text="Active" data-swchoff-text="InActive" style="width: 60px;"></i>Status</label>                                   
                                </section>
                            </div>
                        </fieldset>

                        <footer>
                            <button type="submit" class="btn btn-primary">
                                Submit
                            </button>
                            <button type="button" class="btn btn-default" onclick="this.form.reset();">
                                Clear
                            </button>
                        </footer>
                    </form>

                </div>
                <!-- end widget content -->

            </div>
            <!-- end widget div -->

        </div>
        <!-- end widget -->

    </article>
    <!-- END COL -->

        
</div>